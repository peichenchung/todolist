<div class="form-page">

  <%# 印出錯誤訊息%>
  <div class="error-message">
    <% if @todo.errors.present? %>
      <ul>
        <% @todo.errors.each do |error, message| %>
          <li><%= "#{error.capitalize} #{message}"%></li>
        <% end %>
      </ul>
    <% end %>
  </div>
  
  <div class="form container">
    <div class="todo-form">
      <%= form_for @todo do |f| %>
        
        <div class="form-group">
          <h3><%= f.label :name, 'To do item' %></h3>
          <%= f.text_field :name, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :due_date, 'Due Date' %>
          <%= f.date_select :due_date, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :note, 'Note' %>
          <%= f.text_area :note, class: "form-control" %>
        </div>

        <%= f.submit %>
      <% end %>
    </div>
  </div>

  <p><%= link_to 'Back to Index', todos_path %></p>

</div>